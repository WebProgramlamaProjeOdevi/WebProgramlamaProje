
@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="ftco-section">
	<div class="container" style="margin-top:100px">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section">Admin Login</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">
					<form action="#" class="signin-form">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="Username" required>
						</div>
						<div class="form-group">
							<input id="password-field" type="password" class="form-control" placeholder="Password" required>
							<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
						</div>
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
						</div>
					</form>				
					<div class="social d-flex text-center">
						<a class="px-2 py-2 mr-md-1 rounded" asp-area="" asp-controller="Login" asp-action="UserLogin">
						<span class="ion-logo-facebook mr-2"></span> User Login</a>
						<a class="px-2 py-2 mr-md-1 rounded" asp-area="" asp-controller="Login" asp-action="UserRegister">
							<span class="ion-logo-facebook mr-2"></span> User Register
						</a>
					</div>
					<br />
					<p class="w-100 text-center">
						<a class="px-2 py-2 mr-md-1 rounded" asp-area="" asp-controller="Home" asp-action="Index">
							Go website
						</a>
					</p>
					
				</div>
			</div>
		</div>
	</div>
</section>

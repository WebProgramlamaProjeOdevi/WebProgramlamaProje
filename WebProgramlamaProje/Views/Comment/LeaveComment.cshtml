<div class="comment-template">
    <h4>Yorum bırakın</h4>
    <p>Soru ve görüşlerinizi bizimle paylaşın...</p>
    <form method="post">
        <p>
            <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" />
            <input type="hidden" name="BlogID" value="@ViewBag.id" />
            <input type="text" name="NameSurname" placeholder="İsim*">
            <input type="email" name="CommentMail" placeholder="Email*">
        </p>
        <p>
            <textarea name="CommentText" placeholder="Yorumunuz*" cols="30" rows="10" class="form-control"></textarea>
        </p>
        <p><input type="submit" value="Gönder"></p>
    </form>
</div>

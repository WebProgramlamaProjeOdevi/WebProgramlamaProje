@model IEnumerable<WebProgramlamaProje.Entity.Comment>

<div class="comments-list-wrap">
    <h3 class="comment-count-title">Yorumlar</h3>
    <div class="comment-list">
        @if (Model.Count() == 0)
        {
            <h4>Henüz yorum yok. İlk yorumu siz yapın...</h4>
        }
        else
        {
            foreach (var x in Model)
            {
                <div class="single-comment-body">
                    <div class="comment-user-avater" style="height:50px;width:50px;">
                        <img src="~/blogui/img/avatar.png" alt="" style="height:50px;width:100px;">
                    </div>
                    <div class="comment-text-body">
                        <h4>@x.NameSurname <span class="comment-date">@(((DateTime)x.CommentDate).ToString("dd-MM-yyyy"))</span></h4>
                        <p>@x.CommentText</p>
                    </div>
                </div>
            }
        }
    </div>
</div>
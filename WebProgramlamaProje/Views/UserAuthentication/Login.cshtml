@model WebProgramlamaProje.Entity.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="ftco-section">
	<div class="container" style="margin-top:100px">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section" key=12>Login</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">
					<form asp-action="Login" method="post">

						<div class="form-group">
							<input type="text" asp-for="Username" class="form-control" placeholder="Enter Username">
						</div>
						<div class="msg">
							<span class="err" asp-validation-for="Username"></span>
						</div>
						<div class="form-group">
							<input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">
							<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
						</div>
						<div class="msg">
							<span asp-validation-for="Password" class="err"></span>
						</div>
						@if (TempData["msg"] != null)
						{
							<div class="msg">@TempData["msg"]</div>
						}
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3" key=13>Sign In</button>
						</div>

					</form>

					<div class="social d-flex text-center">
						<a class="px-2 py-2 mr-md-1 rounded" asp-area="" asp-controller="UserAuthentication" asp-action="Registration" key=14>
							<span class="ion-logo-facebook mr-2"></span> Register
						</a>
					</div>
					<br />
					<p class="w-100 text-center">
						<a class="px-2 py-2 mr-md-1 rounded" asp-area="" asp-controller="Home" asp-action="Index" key=15>
							Go website
						</a>
					</p>

				</div>
			</div>
		</div>
	</div>
</section>
